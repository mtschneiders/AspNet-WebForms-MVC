@using GridMvc.Html

@{
    ViewBag.Title = "Index";
}

@model List<Entity.Customer>

<h2>Index</h2>
<span>@ViewBag.Message</span>


@Html.Grid(Model).Columns(columns =>
{
    columns.Add(foo => foo.Name)
           .Titled("Customer Name")
           .SetWidth(110)
           .Sortable(true)
           .Filterable(true);
}).WithPaging(10)

@Html.Partial("NewCustomerForm")